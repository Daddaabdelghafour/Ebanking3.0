FROM maven:3.9-eclipse-temurin-17 AS build
WORKDIR /app
# Copy root POM for dependency resolution
COPY pom.xml .
# Copy only the Kyc-service module
COPY Kyc-service/pom.xml Kyc-service/pom.xml
COPY Kyc-service/src Kyc-service/src
RUN mvn -pl Kyc-service -am clean package -DskipTests

FROM eclipse-temurin:17-jre-alpine
WORKDIR /app
COPY --from=build /app/Kyc-service/target/*.jar app.jar
EXPOSE 8083
ENTRYPOINT ["java","-jar","app.jar"]
