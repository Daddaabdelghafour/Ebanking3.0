FROM maven:3.9-eclipse-temurin-17 AS build
WORKDIR /app
# Copy root POM and all modules for aggregator resolution
COPY pom.xml .
COPY auth-service ./auth-service
COPY user-service ./user-service
COPY account-service ./account-service
COPY Kyc-service ./Kyc-service
COPY notification-service ./notification-service
COPY api-gateway ./api-gateway
# Build only the Kyc-service module
RUN mvn -pl Kyc-service -am clean package -DskipTests

FROM eclipse-temurin:21-jre-alpine
WORKDIR /app
COPY --from=build /app/Kyc-service/target/*.jar app.jar
EXPOSE 8083
ENTRYPOINT ["java","-jar","app.jar"]
